<header id="header-area">
    <div class="header-top">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('coreshop_index') }}">
                                {{ 'coreshop.ui.home'|trans }}
                            </a>
                        </li>
                        {{ render(controller('CoreShop\\Bundle\\FrontendBundle\\Controller\\CustomerController::headerAction')) }}
                    </ul>
                    <ul class="navbar-nav">
                        {% if is_granted('CORESHOP_WISHLIST') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('coreshop_wishlist_summary') }}">
                                    <i class="bi bi-heart-fill"></i> {{ 'coreshop.ui.wishlist'|trans }}
                                </a>
                            </li>
                        {% endif %}
                        {% if is_granted('CORESHOP_CURRENCY_SWITCH') %}
                            <li class="nav_item">
                                {{ render(controller('CoreShop\\Bundle\\FrontendBundle\\Controller\\CurrencyController::widgetAction')) }}
                            </li>
                        {% endif %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="fi fi-{% if app.request.locale is same as('en') %}gb{% else %}{{ app.request.locale }}{% endif %}"></span>{{ app.request.locale|upper|coreshop_country_name(app.request.locale) }}
                            </a>
                            <div class="dropdown-menu" aria-labelledby="languageDropdown">
                                {% for document in coreshop_locale_switcher(document) %}
                                    <a class="dropdown-item" href="{{ document.target }}"><span class="fi fi-{% if document.language is same as('en') %}gb{% else %}{{ document.language }}{% endif %}"></span>{{ document.language|upper|coreshop_country_name(app.request.locale) }}</a>
                                {% endfor %}
                            </div>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </div>

    {% include '@CoreShopFrontend/_navigation.html.twig' %}

    <div class="main-header">
        <div class="container">
            <div class="row">
                MeNU
            </div>
        </div>
    </div>

    {% if is_granted('CORESHOP_CATEGORY_SHOW') %}
        {{ render(controller('CoreShop\\Bundle\\FrontendBundle\\Controller\\CategoryController::menuAction')) }}
    {% endif %}
</header>
